<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Sites.HomePage"
             Title="HomePage">
    <Grid RowDefinitions="9.0*, auto,  1*">
        <VerticalStackLayout
        Grid.Row="0"
                BackgroundColor="LightBlue"
                Padding="25"
                Spacing="25">

        <Label
                        FontSize="32"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Margin="0,20,0,20"
                        />
        </VerticalStackLayout>

        <BoxView Grid.Row="1"
                     HeightRequest="1"
                     BackgroundColor="Black"
                     HorizontalOptions="Fill"
            />
        <VerticalStackLayout
            Grid.Row="2"
            Background="LightBlue"
            Padding="25"
            Spacing="25"
            >

        </VerticalStackLayout>
    </Grid>

</ContentPage>