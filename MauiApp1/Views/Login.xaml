
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:components="clr-namespace:MauiApp1.Sites"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiApp1.ViewModels"
             x:DataType="viewmodels:LoginViewModel"
             x:Class="MauiApp1.Login"
             Title="Login">

    <VerticalStackLayout
        BackgroundColor="LightBlue"
        Padding="25"
        Spacing="25">
        <Label 
            Text="Login Page"
        FontSize="32"
        FontAttributes="Bold"
        HorizontalOptions="Center"
        HorizontalTextAlignment="Center"
        LineBreakMode="WordWrap"
        Margin="0,20,0,20" />
        <Image
                Source="../logo.png"
                HeightRequest="150"
                WidthRequest="100"
                HorizontalOptions="Center"
                Aspect="AspectFit"
                />
        <Entry 
            Background="White"
            MaxLength="20"
            Placeholder="Email"
            TextColor="Black"
            WidthRequest="400"
            HeightRequest="50"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            Text="{Binding Login.Email}"
            />

        <Entry
            Background="White"
            TextColor="Black"
            MaxLength="20"
            Placeholder="Password"
            IsPassword="True"
            WidthRequest="400"
            HeightRequest="50"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            Text="{Binding Login.Password}"
            />
        <Button
            x:Name="ForgotPassword"
            Text="Forgot Password"
            CornerRadius="20"
            WidthRequest="170"
            HeightRequest="50"
            Command="{Binding ForgotCommand}"
        />
        <Button
            x:Name="LoginButton"
            Text="Log in"
            CornerRadius="20"
            WidthRequest="100"
            HeightRequest="50"
            Command="{Binding LoginCommand}"
            />
        <components:Components
            />
    </VerticalStackLayout>
</ContentPage>