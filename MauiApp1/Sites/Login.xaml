
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:components="clr-namespace:MauiApp1.Sites"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Login"
             Title="Login">

    <VerticalStackLayout
        BackgroundColor="LightBlue"
        Padding="25"
        Spacing="25">
        <Label 
            Style="{StaticResource TextTarget}"
            Text="Login Page"
            FontAttributes="Italic"
            FontSize="25"/>
        <Image
                Source="../logo.png"
                HeightRequest="250"
                Aspect="AspectFit"
                />
        <Entry 
            Background="Gray"
            x:Name="IsLoginTrue"
            MaxLength="20"
            Placeholder="Login"
            TextColor="Black"
            />

        <Entry
            Background="Gray"
            x:Name="IsPasswordTrue"
            MaxLength="20"
            Placeholder="Password"
            IsPassword="True"
            />
        <Button
            x:Name="LoginButton"
            Text="Log in"
            BackgroundColor="Grey"
            Clicked="OnLoginClicked"
            />
        <components:Components
            />
    </VerticalStackLayout>
</ContentPage>